<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/static/styles/hangman-styles.css">
    <title>Hangman-Web</title>
</head>
<body>
    {{if .Win}}
        <div class="hm_body_box">
            <div class="hm_header_box">
                <h1>Hangman</h1>
            </div>
            <div class="end_box">
                <div class="end_header_box">
                    <h2>Vous avez gagné !</h2>
                    <p>Le mot était bien {{.Word}}</p>
                </div>
                <div class="end_body_box">
                    <table>
                        <thead>
                        <tr>
                            <th colspan="2">⭐️ ScoreBoard ⭐</th>
                        </tr>
                        <tr>
                            <th>Username</th>
                            <th>Points</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{ range .Scores }}
                            <tr>
                                <td>{{ .Name }}</td>
                                <td>{{ .Points }}</td>
                            </tr>
                        {{ end }}
                        </tbody>
                    </table>
                    <br>
                    <a class="hm_replay_link" href="/">REPLAY</a>
                </div>
            </div>
            <div class="hm_footer_box">
                <p>By Nayan Mallet & Pablo Jean Louis</p>
            </div>
        </div>
    {{else if .Lives}}
        <div class="hm_body_box">
            <div class="hm_header_box">
                <h1>Hangman</h1>
            </div>
            <div class="hm_grid">
                <div class="hm_left">
                    <div class="hm_lives_box">
                        <h2>Lives</h2>
                        <p>{{.Lives}}</p>
                    </div>
                </div>
                <div class="hm_mid">
                    <div class="hm_word">
                        <h2 id="hm_word_text">{{ .WordToPrint }}</h2>
                    </div>
                    <div class="hm_hangman_box">
                        <pre>{{ .Hangman }}</pre>
                    </div>
                    <div class="hm_input_box">
                        <form id="input-form"
                              action="/api/hangman"
                              method="post">
                            <input class="hm_input" type="text" placeholder="Enter a Letter/Word" id="letter_input" name="letter" pattern="^[a-zA-Z]*$" autofocus required>
                            <input class="hm_submit_button" type="submit" value="Submit">
                        </form>
                    </div>
                </div>
                <div class="hm_right">
                    <div class="hm_letters">
                        <h2>Letters Suggested</h2>
                        <p>{{ .LetterSuggested }}</p>
                    </div>
                </div>
            </div>
            <div class="hm_footer_box">
                <p>By Nayan Mallet & Pablo Jean Louis</p>
            </div>
        </div>
    {{else}}
        <div class="hm_body_box">
            <div class="hm_header_box">
                <h1>Hangman</h1>
            </div>
            <div class="end_box">
                <div class="end_header_box">
                    <h2>Vous avez perdu !</h2>
                    <p>Le mot était {{.Word}}</p>
                </div>
                <div class="end_body_box">
                    <a class="hm_replay_link" href="/">REPLAY</a>
                </div>
            </div>
            <div class="hm_footer_box">
                <p>By Nayan Mallet & Pablo Jean Louis</p>
            </div>
        </div>
    {{end}}
</body>
</html>
